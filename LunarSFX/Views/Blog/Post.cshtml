@model LunarSFX.Core.Objects.Post
@{
    ViewBag.Title = Model.Title;
}
<div id="content">
    <div class="post">
        <div class="post-meta">
            <div class="row">

                <div class="post-title">
                    <h1>@Html.PostLink(Model)</h1>
                </div>

            </div>
            <div class="row">

                <div class="post-category">
                    @Html.CategoryLink(Model.Category)
                </div>

                <div>
                    @Helpers.Tags(Html, Model.Tags)


                    <span class="posted-date pull-right">Posted On 
                        @Model.PostedOn.ToString("f")
                </span>
            </div>
            </div>
        </div>

        <div class="post-body">
            @Html.Raw(Model.Description)
        </div>

    </div>
</div>
