@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow">
    <title>Manage Posts, Categories and Tags</title>

    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/ui.jqGrid/css")
    @Styles.Render("~/Content/admin/css")
</head>
<body>

    <!-- logout link -->
    <div style="text-align:right; margin-bottom:5px;">
        <p>@Html.ActionLink("logout", "LogOut", "Auth")</p> 
        <p> @Html.ActionLink("Return to posts", "Posts", "Blog")</p>
    </div>

    <h2>Manage Posts, Categories and Tags</h2>

    <!-- tab control -->
    <div id="tabs">
        <ul>
            <li><a href="#tab-posts">Posts</a></li>
            <li><a href="#tab-cats">Categories</a></li>
            <li><a href="#tab-tags">Tags</a></li>
            @if (CurrentUser.IsInRole("SuperAdmin"))
            {
                <li><a href="#tab-users">Users</a></li>
            }           
        </ul>

        <div id="tab-posts" class="tab">
            <table id="tablePosts" class="grid"></table>
            <div id="pagerPosts" class="pager">
            </div>
        </div>

        <div id="tab-cats" class="tab">
            <table id="tableCats" class="grid"></table>
            <div id="pagerCats" class="pager">
            </div>
        </div>

        <div id="tab-tags" class="tab">
            <table id="tableTags" class="grid"></table>
            <div id="pagerTags" class="pager">
            </div>
        </div>
        @if (CurrentUser.IsInRole("SuperAdmin"))
        {
            <div id="tab-users" class="tab">
                <table id="tableUsers" class="grid"></table>
                <div id="pagerUsers" class="pager">
                </div>
            </div>
        }       
    </div>

    <!-- jquery library -->
    @Scripts.Render("~/Scripts/jquery")
    <!-- jquery ui library -->
    @Scripts.Render("~/Scripts/jqueryui")
    <!-- jqgrid library-->
    @Scripts.Render("~/Scripts/jqgrid")
    <!-- Tiny Mce library-->
    @Scripts.Render("~/Scripts/tinymce/js")
    <!-- Admin library-->
    @Scripts.Render("~/Scripts/admin/js")
</body>
</html>